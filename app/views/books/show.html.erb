<div class="row">
<%= render 'books/info', {book: @new_book, user: @book.user} %>

  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
      <tbody>
        <tr>
          <td><%= image_tag @book.user.get_profile_image("100x100") %>
              <%= @book.user.name %>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
        <% if @book.user == current_user %>
          <td>
            <%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-sm btn-success' %>
          </td>
          <td>
            <%= link_to "Destroy", book_path(@book), method: :delete, class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>