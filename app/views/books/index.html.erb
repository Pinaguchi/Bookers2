<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
  　　　　　　<table class="table">
    　　　　　　<tbody>
  　　　　　　　　　　<tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
            </tbody>
          </table>

         <% if @user == current_user %>
           <%= link_to "編集", edit_user_path(@user), class: 'btn btn-outline-secondary btn-block' %>
         <% end %>


      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local:true do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %><br>
        <%= f.submit "Create Book", class: 'btn btn-success' %>
      <% end %>
    </div>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <% @books.each do |book| %>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= image_tag book.user.get_profile_image("40x40") %></td>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            </tr>
          </tbody>
        </table>
        <% end %>
      </div>
  </div>
</div>
